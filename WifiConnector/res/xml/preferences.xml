<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >

    <PreferenceCategory android:title="@string/settings" >
        <EditTextPreference
            android:name="MSISDN"
            android:defaultValue=""
            android:key="mobileNumber"
            android:summary="@string/settings_msisdn_detail"
            android:title="@string/settings_msisdn" />

        <CheckBoxPreference
            android:defaultValue="false"
            android:key="autoConnect"
            android:summary="@string/settings_autoconnect_detail"
            android:title="@string/settings_autoconnect" />

        <ListPreference
            android:defaultValue="15"
            android:entries="@array/smsDelay"
            android:entryValues="@array/smsDelayValues"
            android:key="smsDelay"
            android:summary="@string/settings_smsdelay_detail"
            android:title="@string/settings_smsdelay" />
        
        <ListPreference
            android:defaultValue="100"
            android:entries="@array/smsReceivePriority"
            android:entryValues="@array/smsReceivePriorityValues"
            android:key="smsPriority"
            android:summary="@string/settings_prio_detail"
            android:title="@string/settings_prio" />
        
        <CheckBoxPreference
            android:defaultValue="true"
            android:key="autoClearNotification"
            android:summary="@string/settings_autoclearnotification_detail"
            android:title="@string/settings_autoclearnotification" />
        
    </PreferenceCategory>

</PreferenceScreen>